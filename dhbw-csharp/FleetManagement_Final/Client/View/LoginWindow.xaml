<Window x:Class="Client.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.View"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <!--Label-->
        <Label Content="Login" Margin="158,0,167,187" FontSize="35" ScrollViewer.HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Center"></Label>
        <Label Content="Name:" Margin="43,87,366,149"></Label>
        <Label Content="Passwort:" Margin="43,139,366,98"></Label>
        <!--Fields-->
        <TextBox Margin="142,87,75,149" Text="{Binding Username}" VerticalContentAlignment="Center"></TextBox>
        <TextBox Margin="142,138,75,98" Text="{Binding Password}" VerticalContentAlignment="Center"></TextBox>
        <!--Button-->
        <Button Content="Login" Margin="158,194,158,26" Command="{Binding LoginCommand}"></Button>
    </Grid>
</Window>
