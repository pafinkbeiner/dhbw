<Window x:Class="Client.View.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.View"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="400" Width="600">
    <Grid>
        <Label Content="Passwort" Margin="108,55,422,287"></Label>
        <Label Content="Neues Passwort" Margin="108,122,379,212"></Label>
        <TextBox Margin="108,82,116,252" Text="{Binding Password}"/>
        <TextBox Margin="108,157,116,177" Text="{Binding NewPassword}"/>
        <TextBox Margin="108,237,116,97" Text="{Binding RepPassword}"/>
        <Label Content="Neues Passwort (Wiederholen)" Margin="108,202,294,132"/>
        <Button Content="Passwort ändern" Margin="204,295,218,36" Command="{Binding ChangePasswordCommand}"></Button>
    </Grid>
</Window>
